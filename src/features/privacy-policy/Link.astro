---
import externalLinkIcon from "@assets/external-link.svg";
import { Image } from "astro:assets";

type Props = {
  href: string;
  external?: boolean;
  class?: string;
};

const { href, external = false, class: overrideClass } = Astro.props;
---

<a
  href={href}
  class:list={[
    "underline underline-offset-3 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 focus-visible:ring-offset-2 focus-visible:ring-offset-white dark:focus-visible:ring-offset-slate-900 rounded-sm",
    overrideClass,
  ]}
  {...external && {
    target: "_blank",
    rel: "noopener noreferrer",
  }}
>
  <slot />
  {
    external && (
      <Image
        src={externalLinkIcon}
        alt=""
        class="inline-block w-4 h-4 dark:invert dark:brightness-90"
      />
    )
  }
</a>
