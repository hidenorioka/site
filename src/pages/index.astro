---
import AppLayout from "@components/AppLayout.astro";

import Introduction from "@features/top/Introduction.astro";
import Career from "@features/top/Career.astro";
import Article from "@features/top/Article.astro";
import Certification from "@features/top/Certification.astro";
---

<AppLayout>
  <div class="flex-1 relative">
    <div class="md:px-8 px-6 py-12 max-w-3xl mx-auto">
      <div class="mb-24">
        <Introduction />
      </div>

      <div class="space-y-24">
        <div class="opacity-0 animate-fadeInUp [animation-delay:200ms]">
          <Career />
        </div>

        <div class="opacity-0 animate-fadeInUp [animation-delay:400ms]">
          <Article />
        </div>

        <div class="opacity-0 animate-fadeInUp [animation-delay:600ms]">
          <Certification />
        </div>
      </div>
    </div>
  </div>
</AppLayout>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translate3d(0, 40px, 0);
    }
    to {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }

  .animate-fadeInUp {
    animation: fadeInUp 0.8s ease-out forwards;
    will-change: transform, opacity;
  }
</style>
