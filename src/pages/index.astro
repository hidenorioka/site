---
import AppLayout from "@components/AppLayout.astro";

import Introduction from "@features/top/Introduction.astro";
---

<AppLayout>
  <div class="flex-1 relative overflow-hidden">
    <section
      class="min-h-[calc(100vh-4rem)] flex items-center justify-center relative bg-white dark:bg-slate-900"
    >
      <div class="absolute inset-0 overflow-hidden">
        <div
          class="absolute top-1/4 -left-20 w-96 h-96 bg-primary-100/30 dark:bg-primary-800/20 rounded-full blur-3xl animate-float"
        >
        </div>
        <div
          class="absolute bottom-1/4 -right-20 w-96 h-96 bg-accent-400/20 dark:bg-accent-600/20 rounded-full blur-3xl animate-float"
          style="animation-delay: -3s;"
        >
        </div>
      </div>

      <div class="relative z-10 px-6 md:px-8 max-w-6xl mx-auto w-full">
        <Introduction />
      </div>
    </section>
  </div>
</AppLayout>
