---
type Props = {
  items: {
    text: string;
    url?: string;
  }[];
};

const { items } = Astro.props;
---

<ul
  class="md:text-[13px] text-[12px] md:leading-[1.6] leading-[1.5] break-all space-y-5"
>
  {
    items.map(({ text, url }) => (
      <li class="mb-1">
        {typeof url === "string" ? (
          <a
            href={url}
            target="_blank"
            rel="noopener noreferrer"
            class="underline underline-offset-5 hover:opacity-50 transition duration-300"
          >
            {text}
          </a>
        ) : (
          text
        )}
      </li>
    ))
  }
</ul>
