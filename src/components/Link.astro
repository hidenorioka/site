---
import externalLinkIcon from "@assets/external-link.svg";
import { Image } from "astro:assets";

type Props = {
  href: string;
  external?: boolean;
  className?: string;
};

const { href, external = false, className } = Astro.props;
---

<a
  href={href}
  class:list={["underline underline-offset-3", className]}
  {...external && {
    target: "_blank",
    rel: "noopener noreferrer",
  }}
>
  <slot />
  {
    external && (
      <Image src={externalLinkIcon} alt="" class="inline-block w-4 h-4" />
    )
  }
</a>
