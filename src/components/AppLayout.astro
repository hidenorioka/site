---
import "@styles/global.css";

import Meta from "@components/Meta.astro";
import GoogleAnalytics from "@components/GoogleAnalytics.astro";

type Props = {
  title?: string;
};

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <Meta title={title} />
    <GoogleAnalytics />
  </head>
  <body class="min-h-[100svh] min-w-[340px] bg-white flex flex-col">
    <main class="flex-1 flex flex-col">
      <slot />
    </main>
    <footer class="border-t-1 border-t-gray-200 mx-8 pt-2">
      <ul class="pb-2 text-center">
        <li class="text-[10px]">
          <a href="/privacy-policy">プライバシーポリシー</a>
        </li>
      </ul>
      <div class="pb-4 text-center">
        <p class="text-[12px]">© 2025 hidenorioka</p>
      </div>
    </footer>
  </body>
</html>
